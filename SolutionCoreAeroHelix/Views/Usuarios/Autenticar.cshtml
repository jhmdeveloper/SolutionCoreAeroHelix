<!-- begin::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(../../../assets/app/media/img//bg/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">

                   
                        <div class="m-login__logo">
                            <a href="#">
                                <img src="../../../assets/app/media/img/logos/AeroHelixLogo160.png">
                            </a>
                        </div>
                        <div class="m-login__signin">
                            <div class="m-login__head">
                                <h3 class="m-login__title">Bienvenido</h3>
                            </div>

                            @using (Html.BeginForm("Autenticar", "Usuarios",
                            new { ReturnUrl = ViewBag.ReturnUrl },
                            FormMethod.Post, new { @class = "m-login__form m-form" }))
                            {


                                if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger">
                                        <button class="close" data-close="alert"></button>
                                        <span> Usuario y/o Contraseña incorrectos.</span>
                                    </div>
                                }

                                <div class="form-group m-form__group">
                                    <input class="form-control m-input" type="text" placeholder="Usuario" name="UserName" autocomplete="off">
                                </div>
                                <div class="form-group m-form__group">
                                    <input class="form-control m-input m-login__form-input--last" type="password" placeholder="Contrasenia" name="password">
                                </div>

                                @*<div class="m-login__form-action">
                                    <button id="m_login_signin_submit" value="Autenticar" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">Entrar</button>
                                </div>*@

                                <div class="m-login__form-action">
                                    <input type="submit" value="Autenticar" class="btn btn-dark m-btn m-btn--pill m-btn--lg m-btn--air m-login__btn m-login__btn--primary" />
                                </div>

                                @*</form>*@

                            }

                        </div>
                   

                    </div>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="../../../assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="../../../assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>

    <!--end::Base Scripts -->
